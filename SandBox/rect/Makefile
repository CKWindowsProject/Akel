# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Akel_config = debug
  Rect_config = debug

else ifeq ($(config),release)
  Akel_config = release
  Rect_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Akel Rect

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Akel:
ifneq (,$(Akel_config))
	@echo "==== Building Akel ($(Akel_config)) ===="
	@${MAKE} --no-print-directory -C ../../Akel -f Makefile config=$(Akel_config)
endif

Rect: Akel
ifneq (,$(Rect_config))
	@echo "==== Building Rect ($(Rect_config)) ===="
	@${MAKE} --no-print-directory -C . -f Rect.make config=$(Rect_config)
endif

clean:
	@${MAKE} --no-print-directory -C ../../Akel -f Makefile clean
	@${MAKE} --no-print-directory -C . -f Rect.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Akel"
	@echo "   Rect"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"